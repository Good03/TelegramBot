<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <RollingFile name="MAIN" fileName="data/logs/main.log"
                     filePattern="data/logs/main-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1000" />
            </Policies>
        </RollingFile>

        <RollingFile name="DEBUG_LOG" fileName="data/logs/debug.log"
                     filePattern="data/logs/debug-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1000" />
            </Policies>
        </RollingFile>

        <RollingFile name="FATAL_LOG" fileName="data/logs/fatal.log"
                     filePattern="data/logs/fatal-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1000" />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console" level="WARN"/>
            <AppenderRef ref="MAIN"/>
        </Root>

        <Logger name="org.pollux.foo" level="DEBUG">
            <AppenderRef ref="DEBUG_LOG"/>
        </Logger>

        <Logger name="org.pollux" level="FATAL">
            <AppenderRef ref="FATAL_LOG"/>
        </Logger>
    </Loggers>
</Configuration>
